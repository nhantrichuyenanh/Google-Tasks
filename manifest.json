{
  "manifest_version": 2,
  "name": "Google Tasks Sidebar",
  "description": "Displays Google Tasks in Sidebar.",
  "version": "1.0.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "58.0"
    }
  },
  "sidebar_action": {
    "default_icon": {
      "48": "GoogleTasks.svg",
      "96": "GoogleTasks.svg"
    },
    "default_title": "Google Tasks",
    "default_panel": "sidebar/panel.html"
  },
  "page_action": {
    "default_icon": {
      "48": "GoogleTasks.svg",
      "96": "GoogleTasks.svg"
    },
    "default_title": "Toggle Google Tasks Sidebar"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "GoogleTasks.svg",
    "96": "GoogleTasks.svg"
  },
  "permissions": [
    "storage"
  ]
}