{
  "manifest_version": 3,
  "name": "Google Tasks Sidebar",
  "description": "Quickly access and manage Google Tasks.",
  "version": "1.4.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "{6733a00c-d723-417d-abe1-4725aa77410f}",
      "strict_min_version": "109.0"
    }
  },
  "sidebar_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },
    "default_title": "Google Tasks",
    "default_panel": "sidebar/sidebar.html",
    "open_at_install": true
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },
    "default_title": "Toggle Google Tasks Sidebar"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Toggle Google Tasks Sidebar"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "commands": {
    "open_sidebar": {
      "suggested_key": {
        "default": "Ctrl+Alt+G"
      },
      "description": "Open Google Tasks in sidebar"
    },
    "open_new_tab": {
      "suggested_key": {
        "default": "Ctrl+Alt+N"
      },
      "description": "Open Google Tasks in a new tab"
    },
    "open_background_tab": {
      "suggested_key": {
        "default": "Ctrl+Alt+B"
      },
      "description": "Open Google Tasks in the background"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  }
}