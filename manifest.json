{
  "manifest_version": 3,
  "name": "Google Tasks",
  "description": "Quickly access and manage Google Tasks.",
  "version": "1.4.4",
  "author": "Nhân Trí",
  "homepage_url": "https://github.com/nhantrichuyenanh/Google-Tasks",
  "background": {"scripts": ["background.js"]},
  "permissions": ["storage", "tabs"],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "sidebar_action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "64": "icon.png",
      "128": "icon.png",
      "256": "icon.png"
    },
    "default_title": "Google Tasks",
    "default_panel": "sidebar/sidebar.html",
    "open_at_install": true
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "64": "icon.png",
      "128": "icon.png",
      "256": "icon.png"
    },
    "default_title": "Toggle Google Tasks Sidebar"
  },
  "page_action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "64": "icon.png",
      "128": "icon.png",
      "256": "icon.png"
    },
    "default_title": "Toggle Google Tasks Sidebar"
  },
  "icons": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "64": "icon.png",
      "128": "icon.png",
      "256": "icon.png"
  },
  "commands": {
    "open_sidebar": {
      "suggested_key": {
        "default": "Ctrl+Alt+G"
      },
      "description": "Open Google Tasks in sidebar"
    },
    "open_new_tab": {
      "suggested_key": {
        "default": "Ctrl+Alt+N"
      },
      "description": "Open Google Tasks in a new tab"
    },
    "open_background_tab": {
      "suggested_key": {
        "default": "Ctrl+Alt+B"
      },
      "description": "Open Google Tasks in the background"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{6733a00c-d723-417d-abe1-4725aa77410f}",
      "strict_min_version": "109.0"
    }
  }
}